  <appSettings>
    <!-- 工作流引擎配置 -->
    <add key="MaxConcurrentWorkflows" value="100" />
    <add key="NodeExecutionTimeout" value="00:30:00" />
    <add key="AutoSaveInterval" value="00:05:00" />
    <!-- 数据库配置 -->
    <add key="DatabaseEnvironment" value="Development" />
    <add key="EnableDatabaseLogging" value="true" />
    <add key="DatabaseCommandTimeout" value="30" />
    <!-- 连接池配置 -->
    <add key="ConnectionPoolMinSize" value="5" />
    <add key="ConnectionPoolMaxSize" value="10" />
    <add key="ConnectionLifetime" value="30" />
    <!-- 日志配置 -->
    <add key="LogLevel" value="Info" />
    <add key="LogFilePath" value="Logs\WorkflowDesigner.log" />
    <add key="EnableSqlLogging" value="false" />
    <!-- 安全配置 -->
    <add key="EnableEncryption" value="false" />
    <add key="EncryptionKey" value="" />
    <!-- 性能配置 -->
    <add key="CacheTimeout" value="00:30:00" />
    <add key="EnableQueryCache" value="true" />
    <!-- 邮件配置 -->
    <add key="SmtpServer" value="smtp.example.com" />
    <add key="SmtpPort" value="587" />
    <add key="SmtpUsername" value="" />
    <add key="SmtpPassword" value="" />
    <add key="SmtpEnableSsl" value="true" />
    <!-- 文件存储配置 -->
    <add key="FileStoragePath" value="Storage\Files" />
    <add key="MaxFileSize" value="10485760" />
    <!-- 10MB -->
    <add key="AllowedFileExtensions" value=".pdf,.doc,.docx,.xls,.xlsx,.txt,.jpg,.png" />
  </appSettings>
