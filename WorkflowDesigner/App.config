    <add name="WorkflowDesignerMySqlProd" connectionString="Server=prod-mysql-server;Port=3306;Database=WorkflowDesigner_Prod;Uid=root;Pwd=123456;charset=utf8mb4;SslMode=Required;AllowUserVariables=True;UseCompression=True;ConnectionTimeout=30;" providerName="MySql.Data.MySqlClient" />
