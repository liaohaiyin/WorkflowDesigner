    <add name="WorkflowDesignerMySqlTest" connectionString="Server=test-mysql-server;Port=3306;Database=WorkflowDesigner_Test;Uid=root;Pwd=123456;charset=utf8mb4;SslMode=none;AllowUserVariables=True;" providerName="MySql.Data.MySqlClient" />
  </connectionStrings>
