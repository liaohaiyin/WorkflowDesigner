<Window x:Class="WorkflowDesigner.UI.Views.WorkflowDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="工作流详情" Height="600" Width="800" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#FFFFFF">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="工作流实例详情" FontSize="20" FontWeight="Bold" 
                       Foreground="#2C3E50" HorizontalAlignment="Center"/>
            <Rectangle Height="2" Fill="#3498DB" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- 详情内容 -->
        <TabControl Grid.Row="1">

            <!-- 基本信息 -->
            <TabItem Header="基本信息">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 实例信息 -->
                        <GroupBox Grid.Row="0" Header="实例信息" Margin="0,0,0,20" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="实例ID:" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Id}" FontFamily="Consolas" Margin="10,5"/>

                                <TextBlock Grid.Row="0" Grid.Column="2" Text="状态:" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Status}" Margin="10,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="启动人:" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding StartedBy}" Margin="10,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="2" Text="当前节点:" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding CurrentNodeId}" FontFamily="Consolas" Margin="10,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="启动时间:" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding StartTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" Margin="10,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="2" Text="结束时间:" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding EndTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" Margin="10,5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="运行时长:" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Duration}" Margin="10,5"/>
                            </Grid>
                        </GroupBox>

                        <!-- 工作流信息 -->
                        <GroupBox Grid.Row="1" Header="工作流信息" Margin="0,0,0,20" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="工作流名称:" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Definition.Name}" Margin="10,5"/>

                                <TextBlock Grid.Row="0" Grid.Column="2" Text="版本:" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Definition.Version}" Margin="10,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="类别:" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Definition.Category}" Margin="10,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="2" Text="创建时间:" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Definition.CreatedTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" Margin="10,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="描述:" FontWeight="SemiBold" Margin="0,5" VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Definition.Description}" 
                                           TextWrapping="Wrap" Margin="10,5"/>
                            </Grid>
                        </GroupBox>

                        <!-- 错误信息 -->
                        <GroupBox Grid.Row="2" Header="错误信息" Padding="15"
                                  Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Border Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="1" Padding="10">
                                <TextBlock Text="{Binding ErrorMessage}" TextWrapping="Wrap" 
                                           Foreground="#D32F2F" FontFamily="Consolas"/>
                            </Border>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- 节点执行历史 -->
            <TabItem Header="执行历史">
                <DataGrid ItemsSource="{Binding NodeExecutions}" 
                          AutoGenerateColumns="False" IsReadOnly="True"
                          GridLinesVisibility="None" Margin="10"
                          AlternatingRowBackground="#F8F9FA">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="序号" Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}" Width="60"/>
                        <DataGridTextColumn Header="节点ID" Binding="{Binding NodeId}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                    <Setter Property="FontSize" Value="11"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="节点名称" Binding="{Binding NodeName}" Width="150"/>
                        <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="80"/>
                        <DataGridTextColumn Header="开始时间" Binding="{Binding StartTime, StringFormat='MM-dd HH:mm:ss'}" Width="120"/>
                        <DataGridTextColumn Header="结束时间" Binding="{Binding EndTime, StringFormat='MM-dd HH:mm:ss'}" Width="120"/>
                        <DataGridTextColumn Header="执行人" Binding="{Binding ExecutorId}" Width="100"/>
                        <DataGridTextColumn Header="错误信息" Binding="{Binding ErrorMessage}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Red"/>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- 工作流数据 -->
            <TabItem Header="数据详情">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="工作流数据 (JSON格式)" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Button Content="格式化" x:Name="FormatButton" Click="FormatButton_Click" 
                                Padding="8,4" Margin="10,0,5,0"/>
                        <Button Content="复制" x:Name="CopyButton" Click="CopyButton_Click" 
                                Padding="8,4" Margin="0,0,5,0"/>
                        <Button Content="保存" x:Name="SaveButton" Click="SaveButton_Click" 
                                Padding="8,4"/>
                    </StackPanel>

                    <TextBox Grid.Row="1" x:Name="DataTextBox"
                             Text="{Binding DataJson}" IsReadOnly="True" 
                             AcceptsReturn="True" TextWrapping="Wrap"
                             FontFamily="Consolas" FontSize="11"
                             VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Auto"
                             Background="#F8F9FA" BorderBrush="#E0E0E0"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="刷新" x:Name="RefreshButton" Click="RefreshButton_Click" 
                    Padding="15,8" Margin="0,0,10,0" Background="#3498DB" 
                    Foreground="White" BorderThickness="0"/>
            <Button Content="关闭" x:Name="CloseButton" Click="CloseButton_Click" 
                    Padding="15,8" Background="#95A5A6" Foreground="White" 
                    BorderThickness="0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>