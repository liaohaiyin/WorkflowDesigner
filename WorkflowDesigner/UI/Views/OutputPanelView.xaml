<UserControl x:Class="WorkflowDesigner.UI.Views.OutputPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="200" d:DesignWidth="800"
             Background="#FFFFFF">

    <UserControl.Resources>
        <!-- 消息类型样式 -->
        <Style x:Key="InfoMessageStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>
        <Style x:Key="WarningMessageStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF9800"/>
        </Style>
        <Style x:Key="ErrorMessageStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F44336"/>
        </Style>
        <Style x:Key="SuccessMessageStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4CAF50"/>
        </Style>
        <Style x:Key="DebugMessageStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#9C27B0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 过滤器 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBlock Text="过滤:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="FilterComboBox" 
                              SelectedValue="{Binding SelectedFilter}" Width="100">
                        <ComboBoxItem Content="全部" Tag="All"/>
                        <ComboBoxItem Content="信息" Tag="Info"/>
                        <ComboBoxItem Content="警告" Tag="Warning"/>
                        <ComboBoxItem Content="错误" Tag="Error"/>
                        <ComboBoxItem Content="成功" Tag="Success"/>
                        <ComboBoxItem Content="调试" Tag="Debug"/>
                    </ComboBox>
                </StackPanel>

                <!-- 搜索框 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBlock Text="搜索:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="FilterTextBox" 
                             Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                             Width="200" Padding="5,2"/>
                </StackPanel>

                <!-- 自动滚动 -->
                <CheckBox Grid.Column="2" Content="自动滚动" 
                          IsChecked="{Binding AutoScroll}" 
                          VerticalAlignment="Center" HorizontalAlignment="Right"/>

                <!-- 操作按钮 -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Content="复制全部" Command="{Binding CopyAllCommand}" 
                            Padding="8,4" Margin="2"/>
                    <Button Content="导出" Command="{Binding ExportToFileCommand}" 
                            Padding="8,4" Margin="2"/>
                    <Button Content="清空" Command="{Binding ClearMessagesCommand}" 
                            Padding="8,4" Margin="2"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 消息列表 -->
        <ListBox Grid.Row="1" x:Name="MessagesListBox" 
                 ItemsSource="{Binding FilteredMessages}" 
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas" FontSize="12"
                 SelectionMode="Extended"
                 Background="#FAFAFA">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 类型图标 -->
                        <TextBlock Grid.Column="0" Text="{Binding TypeIcon}" 
                                   VerticalAlignment="Center" Margin="0,0,5,0"
                                   FontSize="14"/>

                        <!-- 时间戳 -->
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Timestamp, StringFormat='[HH:mm:ss.fff]'}" 
                                   VerticalAlignment="Center" Margin="0,0,10,0"
                                   Foreground="#666666" FontSize="11"/>

                        <!-- 消息内容 -->
                        <TextBlock Grid.Column="2" Text="{Binding Message}" 
                                   TextWrapping="Wrap" VerticalAlignment="Center"
                                   Style="{Binding Type, Converter={StaticResource MessageTypeToStyleConverter}}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="5,2"/>
                    <Setter Property="Margin" Value="0,1"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#BBDEFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" Padding="10,3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding FilteredMessages.Count, StringFormat='显示 {0} 条消息'}" 
                           VerticalAlignment="Center" FontSize="11"/>

                <TextBlock Grid.Column="1" 
                           Text="{Binding Messages.Count, StringFormat='总计 {0} 条'}" 
                           VerticalAlignment="Center" FontSize="11" 
                           Margin="10,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>