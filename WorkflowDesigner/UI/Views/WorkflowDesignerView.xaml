<UserControl x:Class="WorkflowDesigner.UI.Views.WorkflowDesignerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:nodenetwork="clr-namespace:NodeNetwork.Views;assembly=NodeNetwork"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800"
             AllowDrop="True" Drop="UserControl_Drop" DragOver="UserControl_DragOver"
             Background="#F8F9FA">

    <UserControl.Resources>
        <!-- 网格画刷 -->
        <DrawingBrush x:Key="GridBrush" TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,20,20">
            <DrawingBrush.Drawing>
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,20,20"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Pen>
                        <Pen Brush="#E0E0E0" Thickness="0.5"/>
                    </GeometryDrawing.Pen>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>

        <!-- 布尔值转可见性转换器 -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 设计器工具栏 -->
        <Border Grid.Row="0" Background="#FFFFFF" BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1" Padding="10,5">
            <StackPanel Orientation="Horizontal">

                <!-- 视图控制 -->
                <GroupBox Header="视图" Margin="0,0,10,0" Padding="5" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="适合窗口" Click="FitToWindow_Click" 
                                Padding="8,4" Margin="2" ToolTip="缩放以适合窗口大小"/>
                        <Button Content="实际大小" Click="ActualSize_Click" 
                                Padding="8,4" Margin="2" ToolTip="100%缩放显示"/>
                        <Button Content="居中显示" Click="CenterView_Click" 
                                Padding="8,4" Margin="2" ToolTip="将视图居中显示"/>
                    </StackPanel>
                </GroupBox>

                <!-- 网格和对齐 -->
                <GroupBox Header="网格" Margin="0,0,10,0" Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="ShowGridCheckBox" Content="显示网格" 
                                  IsChecked="True" VerticalAlignment="Center" 
                                  Margin="2" Checked="ShowGrid_Changed" 
                                  Unchecked="ShowGrid_Changed"/>
                        <CheckBox x:Name="SnapToGridCheckBox" Content="网格对齐" 
                                  IsChecked="True" VerticalAlignment="Center" 
                                  Margin="2" ToolTip="启用网格对齐功能"/>
                    </StackPanel>
                </GroupBox>

                <!-- 缩放控制 -->
                <GroupBox Header="缩放" Margin="0,0,10,0" Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="缩放:" VerticalAlignment="Center" Margin="2"/>
                        <Slider x:Name="ZoomSlider" Minimum="0.1" Maximum="3.0" 
                                Value="1.0" Width="120" VerticalAlignment="Center"
                                ValueChanged="ZoomSlider_ValueChanged" Margin="2"/>
                        <TextBlock x:Name="ZoomPercentText" 
                                   Text="{Binding ElementName=ZoomSlider, Path=Value, StringFormat='{}{0:P0}'}" 
                                   VerticalAlignment="Center" Margin="2" MinWidth="40"/>
                    </StackPanel>
                </GroupBox>

                <!-- 操作按钮 -->
                <GroupBox Header="操作" Margin="0,0,10,0" Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="全选" Click="SelectAll_Click" 
                                Padding="8,4" Margin="2" ToolTip="选择所有节点"/>
                        <Button Content="清空" Click="ClearAll_Click" 
                                Padding="8,4" Margin="2" ToolTip="清空所有节点"/>
                        <Button Content="自动布局" Click="AutoLayout_Click" 
                                Padding="8,4" Margin="2" ToolTip="自动排列节点"/>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </Border>

        <!-- 设计器主区域 -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid x:Name="DesignerCanvas">
                <!-- 网格背景 -->
                <Rectangle x:Name="GridBackground"
                           Fill="{StaticResource GridBrush}"
                           Visibility="{Binding ElementName=ShowGridCheckBox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- NodeNetwork视图 -->
                <nodenetwork:NetworkView  Grid.Row="1" x:Name="networkView" 
                                         ViewModel="{Binding Network}" 
                                         Background="Transparent"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Stretch"
                                          RenderTransformOrigin="0.5,0.5"
                                          UseLayoutRounding="False"
                                          SnapsToDevicePixels="False"/>
                <!-- 选择框 -->
                <Rectangle x:Name="SelectionRectangle" 
                           Fill="LightBlue" Opacity="0.3" 
                           Stroke="Blue" StrokeThickness="1" 
                           Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="StatusText" 
                           Text="就绪" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                           Text="{Binding Network.Nodes.Count, StringFormat='节点: {0}'}" 
                           VerticalAlignment="Center" Margin="10,0"/>

                <TextBlock Grid.Column="2" 
                           Text="{Binding Network.Connections.Count, StringFormat='连接: {0}'}" 
                           VerticalAlignment="Center" Margin="10,0"/>

                <TextBlock Grid.Column="3" x:Name="MousePositionText" 
                           Text="X: 0, Y: 0" VerticalAlignment="Center" 
                           Margin="10,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>