<Window x:Class="WorkflowDesigner.UI.Views.WorkflowStartDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="启动工作流" Height="450" Width="550" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="启动工作流实例" FontSize="18" FontWeight="Bold" 
                       Foreground="#2C3E50" HorizontalAlignment="Center"/>
            <Rectangle Height="2" Fill="#3498DB" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- 参数输入区域 -->
        <GroupBox Grid.Row="1" Header="启动参数" Padding="15" 
                  BorderBrush="#BDC3C7" BorderThickness="1">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontWeight="Bold" 
                               Foreground="#34495E" FontSize="14"/>
                </DataTemplate>
            </GroupBox.HeaderTemplate>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 启动人 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="启动人:" 
                           VerticalAlignment="Center" Margin="0,5" FontWeight="SemiBold"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="StartedByTextBox" 
                         Margin="5" Padding="8" BorderBrush="#BDC3C7" BorderThickness="1"
                         ToolTip="输入工作流启动人姓名"/>

                <!-- 优先级 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="优先级:" 
                           VerticalAlignment="Center" Margin="0,5" FontWeight="SemiBold"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="PriorityComboBox" 
                          Margin="5" Padding="8" BorderBrush="#BDC3C7" BorderThickness="1">
                    <ComboBoxItem Content="低" Tag="Low"/>
                    <ComboBoxItem Content="普通" Tag="Normal" IsSelected="True"/>
                    <ComboBoxItem Content="高" Tag="High"/>
                    <ComboBoxItem Content="紧急" Tag="Urgent"/>
                </ComboBox>

                <!-- 备注 -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="备注:" 
                           VerticalAlignment="Top" Margin="0,5" FontWeight="SemiBold"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="RemarksTextBox" 
                         AcceptsReturn="True" Height="60" Margin="5" Padding="8" 
                         TextWrapping="Wrap" BorderBrush="#BDC3C7" BorderThickness="1"
                         VerticalScrollBarVisibility="Auto"
                         ToolTip="输入工作流启动备注信息"/>

                <!-- 初始数据 -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="初始数据:" 
                           VerticalAlignment="Top" Margin="0,5" FontWeight="SemiBold"/>
                <Grid Grid.Row="3" Grid.Column="1" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0" x:Name="InitialDataTextBox" 
                             AcceptsReturn="True" TextWrapping="Wrap" 
                             FontFamily="Consolas" FontSize="12" Padding="8"
                             BorderBrush="#BDC3C7" BorderThickness="1"
                             VerticalScrollBarVisibility="Auto"
                             ToolTip="输入JSON格式的初始数据"/>

                    <!-- JSON格式化按钮 -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                HorizontalAlignment="Right" Margin="0,5,0,0">
                        <Button Content="格式化JSON" x:Name="FormatJsonButton" 
                                Click="FormatJsonButton_Click" Padding="8,4" 
                                Background="#3498DB" Foreground="White" 
                                BorderThickness="0" Margin="0,0,5,0"/>
                        <Button Content="验证JSON" x:Name="ValidateJsonButton" 
                                Click="ValidateJsonButton_Click" Padding="8,4" 
                                Background="#27AE60" Foreground="White" 
                                BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- 提示信息 -->
        <TextBlock Grid.Row="2" 
                   Text="初始数据格式为JSON，例如: {&quot;Amount&quot;: 1000, &quot;Applicant&quot;: &quot;张三&quot;, &quot;Department&quot;: &quot;技术部&quot;}" 
                   FontStyle="Italic" Foreground="#7F8C8D" Margin="0,10" 
                   TextWrapping="Wrap" FontSize="11"/>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="启动工作流" x:Name="StartButton" 
                    Click="StartButton_Click" Padding="20,8" Margin="0,0,10,0" 
                    IsDefault="True" Background="#2ECC71" Foreground="White" 
                    BorderThickness="0" FontWeight="SemiBold"
                    ToolTip="启动工作流实例"/>
            <Button Content="取消" x:Name="CancelButton" 
                    Click="CancelButton_Click" Padding="20,8" 
                    IsCancel="True" Background="#95A5A6" Foreground="White" 
                    BorderThickness="0" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>