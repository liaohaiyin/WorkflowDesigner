<UserControl x:Class="WorkflowDesigner.UI.Views.WorkflowMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:nodenetwork="clr-namespace:NodeNetwork.Views;assembly=NodeNetwork"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800"
             Background="#F8F9FA">

    <UserControl.Resources>
        <!-- 状态颜色转换器 -->
        <SolidColorBrush x:Key="StatusDraftBrush" Color="#9E9E9E"/>
        <SolidColorBrush x:Key="StatusRunningBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="StatusPausedBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="StatusCompletedBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="StatusTerminatedBrush" Color="#F44336"/>
        <SolidColorBrush x:Key="StatusErrorBrush" Color="#E91E63"/>

        <!-- 节点状态颜色 -->
        <SolidColorBrush x:Key="NodePendingBrush" Color="#9E9E9E"/>
        <SolidColorBrush x:Key="NodeRunningBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="NodeCompletedBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="NodeSkippedBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="NodeFailedBrush" Color="#F44336"/>
        <SolidColorBrush x:Key="NodeWaitingBrush" Color="#9C27B0"/>
        <SolidColorBrush x:Key="NodeApprovedBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="NodeRejectedBrush" Color="#F44336"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <Border Grid.Row="0" Background="#FFFFFF" BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <!-- 工作流实例选择 -->
                <GroupBox Header="工作流实例" Margin="0,0,10,0" Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="InstanceComboBox" Width="200" Margin="5,0"
                                  DisplayMemberPath="Name" SelectedValuePath="Id"
                                  SelectionChanged="InstanceComboBox_SelectionChanged"/>
                        <Button Content="刷新" Click="RefreshInstances_Click" 
                                Padding="8,4" Margin="5,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- 工作流控制 -->
                <GroupBox Header="工作流控制" Margin="0,0,10,0" Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="启动" Click="StartWorkflow_Click" 
                                Padding="8,4" Margin="2" Background="#4CAF50" Foreground="White"/>
                        <Button Content="暂停" Click="PauseWorkflow_Click" 
                                Padding="8,4" Margin="2" Background="#FF9800" Foreground="White"/>
                        <Button Content="恢复" Click="ResumeWorkflow_Click" 
                                Padding="8,4" Margin="2" Background="#2196F3" Foreground="White"/>
                        <Button Content="终止" Click="TerminateWorkflow_Click" 
                                Padding="8,4" Margin="2" Background="#F44336" Foreground="White"/>
                    </StackPanel>
                </GroupBox>

                <!-- 审批操作 -->
                <GroupBox Header="审批操作" Margin="0,0,10,0" Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="通过" Click="ApproveNode_Click" 
                                Padding="8,4" Margin="2" Background="#4CAF50" Foreground="White"/>
                        <Button Content="拒绝" Click="RejectNode_Click" 
                                Padding="8,4" Margin="2" Background="#F44336" Foreground="White"/>
                        <Button Content="转办" Click="ForwardNode_Click" 
                                Padding="8,4" Margin="2" Background="#9C27B0" Foreground="White"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 工作流流程图 -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 流程图标题 -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="10,5">
                        <TextBlock Text="工作流流程图" FontWeight="Bold" FontSize="14"/>
                    </Border>

                    <!-- NodeNetwork视图 -->
                    <nodenetwork:NetworkView Grid.Row="1" x:Name="workflowNetworkView" 
                                           ViewModel="{Binding WorkflowNetwork}" 
                                           Background="Transparent"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"/>
                </Grid>
            </Border>

            <!-- 右侧信息面板 -->
            <Border Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="1" Margin="5">
                <TabControl>
                    <!-- 实例信息 -->
                    <TabItem Header="实例信息">
                        <ScrollViewer>
                            <StackPanel Margin="10">
                                <TextBlock Text="基本信息" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="名称:" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding SelectedInstance.Name}" Grid.Column="1"/>
                                </Grid>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="状态:" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding SelectedInstance.Status}" Grid.Column="1">
                                        <TextBlock.Foreground>
                                            <MultiBinding Converter="{StaticResource StatusColorConverter}">
                                                <Binding Path="SelectedInstance.Status"/>
                                            </MultiBinding>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </Grid>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="发起人:" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding SelectedInstance.InitiatorName}" Grid.Column="1"/>
                                </Grid>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="创建时间:" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding SelectedInstance.CreatedTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" Grid.Column="1"/>
                                </Grid>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="开始时间:" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding SelectedInstance.StartTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" Grid.Column="1"/>
                                </Grid>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="完成时间:" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding SelectedInstance.CompletedTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" Grid.Column="1"/>
                                </Grid>
                                
                                <Separator Margin="0,15"/>
                                
                                <TextBlock Text="工作流变量" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                <ListView x:Name="VariablesListView" Height="150" 
                                          ItemsSource="{Binding SelectedInstance.Variables}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="变量名" DisplayMemberBinding="{Binding Key}" Width="100"/>
                                            <GridViewColumn Header="变量值" DisplayMemberBinding="{Binding Value}" Width="150"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- 节点状态 -->
                    <TabItem Header="节点状态">
                        <ScrollViewer>
                            <StackPanel Margin="10">
                                <TextBlock Text="节点执行状态" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                
                                <ListView x:Name="NodesListView" Height="300" 
                                          ItemsSource="{Binding SelectedInstance.NodeInstances}"
                                          SelectionChanged="NodesListView_SelectionChanged">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="节点名" DisplayMemberBinding="{Binding NodeName}" Width="80"/>
                                            <GridViewColumn Header="类型" DisplayMemberBinding="{Binding NodeType}" Width="60"/>
                                            <GridViewColumn Header="状态" Width="80">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Status}" 
                                                                   Foreground="{Binding Status, Converter={StaticResource NodeStatusColorConverter}}"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="执行人" DisplayMemberBinding="{Binding ExecutorName}" Width="60"/>
                                            <GridViewColumn Header="开始时间" DisplayMemberBinding="{Binding StartTime, StringFormat='HH:mm:ss'}" Width="80"/>
                                            <GridViewColumn Header="完成时间" DisplayMemberBinding="{Binding CompletedTime, StringFormat='HH:mm:ss'}" Width="80"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- 审批记录 -->
                    <TabItem Header="审批记录">
                        <ScrollViewer>
                            <StackPanel Margin="10">
                                <TextBlock Text="审批历史" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                
                                <ListView x:Name="ApprovalListView" Height="300" 
                                          ItemsSource="{Binding SelectedInstance.NodeInstances}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="节点" DisplayMemberBinding="{Binding NodeName}" Width="80"/>
                                            <GridViewColumn Header="审批人" DisplayMemberBinding="{Binding ApprovalRecords[0].ApproverName}" Width="80"/>
                                            <GridViewColumn Header="动作" Width="80">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding ApprovalRecords[0].ActionDisplayText}" 
                                                                   Foreground="{Binding ApprovalRecords[0].ActionColor, Converter={StaticResource StringToColorConverter}}"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="意见" DisplayMemberBinding="{Binding ApprovalRecords[0].Comment}" Width="120"/>
                                            <GridViewColumn Header="时间" DisplayMemberBinding="{Binding ApprovalRecords[0].Timestamp, StringFormat='HH:mm:ss'}" Width="80"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- 审批操作 -->
                    <TabItem Header="审批操作">
                        <ScrollViewer>
                            <StackPanel Margin="10">
                                <TextBlock Text="当前审批节点" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="节点名:" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding SelectedNodeInstance.NodeName}" Grid.Column="1"/>
                                </Grid>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="状态:" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding SelectedNodeInstance.Status}" Grid.Column="1"/>
                                </Grid>
                                
                                <Separator Margin="0,15"/>
                                
                                <TextBlock Text="审批意见" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBox x:Name="ApprovalCommentTextBox" Height="60" TextWrapping="Wrap" 
                                         AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                         Margin="0,0,0,10"/>
                                
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="通过" Click="ApproveNode_Click" 
                                            Padding="15,8" Margin="5" Background="#4CAF50" Foreground="White"/>
                                    <Button Content="拒绝" Click="RejectNode_Click" 
                                            Padding="15,8" Margin="5" Background="#F44336" Foreground="White"/>
                                </StackPanel>
                                
                                <Separator Margin="0,15"/>
                                
                                <TextBlock Text="节点数据" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                <ListView x:Name="NodeDataListView" Height="150" 
                                          ItemsSource="{Binding SelectedNodeInstance.InputData}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="数据项" DisplayMemberBinding="{Binding Key}" Width="80"/>
                                            <GridViewColumn Header="值" DisplayMemberBinding="{Binding Value}" Width="120"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="StatusText" 
                           Text="就绪" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                           Text="{Binding RunningInstances.Count, StringFormat='运行中: {0}'}" 
                           VerticalAlignment="Center" Margin="10,0"/>

                <TextBlock Grid.Column="2" 
                           Text="{Binding CompletedInstances.Count, StringFormat='已完成: {0}'}" 
                           VerticalAlignment="Center" Margin="10,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>