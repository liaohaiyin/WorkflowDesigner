<local:DraggableNodeViewBase x:TypeArguments="vm:StartNodeViewModel"
                    x:Class="WorkflowDesigner.UI.Views.Nodes.StartNodeView"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:WorkflowDesigner.UI.Views.Nodes"
                    xmlns:vm="clr-namespace:WorkflowDesigner.Nodes"
                    xmlns:nodenetwork="clr-namespace:NodeNetwork.Views;assembly=NodeNetwork"
                    mc:Ignorable="d"
                    Width="140" Height="80">

    <Border Background="#E8F5E8" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,5">
                <TextBlock Text="▶" FontSize="16" Foreground="#4CAF50" Margin="0,0,5,0" VerticalAlignment="Center"/>
                <TextBlock Text="开始" FontWeight="Bold" FontSize="14" Foreground="#2E7D32" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- 内容区域 -->
            <Grid Grid.Row="1" Margin="8,2">
                <TextBlock x:Name="bb" Text="{Binding NodeName}" 
                         FontSize="12" HorizontalAlignment="Center" 
                         VerticalAlignment="Center" TextWrapping="Wrap"
                         Foreground="#1B5E20" TextAlignment="Center"/>
            </Grid>

            <!-- 输出端口区域 - 修复位置 -->
            <Grid Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Right" 
                  VerticalAlignment="Center" Margin="0,0,-8,0" Background="Red">
                <!-- 添加这个属性 -->
                <ItemsControl ItemsSource="{Binding Outputs.Items}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <nodenetwork:NodeOutputView
                                        ViewModel="{Binding}"
                                        Margin="0,2"
                                        Width="16" Height="16"
                                        Cursor="Hand"
                                        ToolTip="输出端口 - 拖拽创建连接"
                                        DataContext="{Binding}"/>
                            <!-- 确保端口本身可以响应鼠标 -->
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</local:DraggableNodeViewBase>