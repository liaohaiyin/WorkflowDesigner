<local:DraggableNodeViewBase x:TypeArguments="vm:ApprovalNodeViewModel"
                    x:Class="WorkflowDesigner.UI.Views.Nodes.ApprovalNodeView"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:WorkflowDesigner.UI.Views.Nodes"
                    xmlns:vm="clr-namespace:WorkflowDesigner.Nodes"
                    xmlns:nodenetwork="clr-namespace:NodeNetwork.Views;assembly=NodeNetwork"
                    mc:Ignorable="d"
                    Width="140" Height="80">
    <Border Background="#E8EAF6" BorderBrush="#3F51B5" BorderThickness="2" CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,3">
                <TextBlock Text="✓" FontSize="14" Foreground="#3F51B5" Margin="0,0,3,0"/>
                <TextBlock Text="审批" FontWeight="Bold" FontSize="12" Foreground="#303F9F"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Text="{Binding NodeName}" 
                       FontSize="10" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" TextWrapping="Wrap"
                       Margin="3" Foreground="#1A237E"/>

            <Rectangle Grid.Row="2" Height="3" Fill="{Binding StatusBrush}" Margin="3"/>

            <!-- 输入端口区域 - 修复位置 -->
            <Grid Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-8,0,0,0" Background="Red">
                <ItemsControl ItemsSource="{Binding Inputs.Items}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <nodenetwork:NodeInputView
                                        ViewModel="{Binding}"
                                        Margin="0,2"
                                        Width="16" Height="16"
                                        Cursor="Hand"
                                        ToolTip="输入端口 - 接收连接"
                                        DataContext="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <!-- 输出端口区域 - 修复位置 -->
            <Grid Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Right" 
                  VerticalAlignment="Center" Margin="0,0,-8,0">
                <ItemsControl ItemsSource="{Binding Outputs.Items}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <nodenetwork:NodeOutputView
                                        ViewModel="{Binding}"
                                        Margin="0,2"
                                        Width="16" Height="16"
                                        Cursor="Hand"
                                        ToolTip="输出端口 - 拖拽创建连接"
                                        DataContext="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>

    </Border>
</local:DraggableNodeViewBase>